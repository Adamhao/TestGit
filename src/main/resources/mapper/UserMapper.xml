<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.etoak.mapper.UserMapper">
	
	<sql id="user-columns">
		id,name,password
	</sql>
	
	<resultMap type="user" id="rMap_user">
		<id property="id" column="id"></id>
		<result property="username" column="name"></result>
		<result property="password" column="password"></result>
	</resultMap>
	
	<insert id="add" parameterType="user">
		insert into user(<include refid="user-columns"></include>)
		values(#{id},#{username},#{password})
	</insert>
	
	
	<select id="queryPage" resultMap="rMap_user">
		select 
			<include refid="user-columns"></include>
		from 
			user
	</select>

	<select id="isUsernameExists" parameterType="string" resultType="int">
		select count(*) from user where name = #{username}
	</select>
	
	<update id="update" parameterType="user">
		update user
		<trim prefix="set" suffixOverrides="," >
			<if test="username != null">
				name = #{username},
			</if>
			<if test="password != null">
				password = #{password},
			</if>
		</trim>
		where id = #{id}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from user where id = #{id}
	</delete>
	
</mapper>